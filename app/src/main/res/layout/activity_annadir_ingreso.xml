<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnnadirIngreso">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/main_btn_nav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:itemIconTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_navigation_menu" >

    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <FrameLayout
        android:layout_width="421dp"
        android:layout_height="657dp"
        app:layout_constraintBottom_toTopOf="@+id/main_btn_nav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/fecha_seleccionada"
            android:layout_width="161dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="35dp"
            android:text="Fecha"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txt_categoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="110dp"
            android:layout_marginBottom="60dp"
            android:text="Categoría:"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn_guardar"
            android:layout_width="152dp"
            android:layout_height="64dp"
            android:layout_gravity="bottom|center"
            android:layout_marginLeft="90dp"
            android:layout_marginBottom="50dp"
            android:backgroundTint="#39AF3D"
            android:text="Guardar"
            android:textColorHighlight="#4CAF50"
            android:textSize="24sp" />
        <Button
            android:id="@+id/btn_cancelar"
            android:layout_width="152dp"
            android:layout_height="64dp"
            android:layout_gravity="bottom|center"
            android:layout_marginRight="90dp"
            android:layout_marginBottom="50dp"
            android:backgroundTint="#F44336"
            android:text="Cancelar"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/ent_cantidad"
            android:layout_width="183dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginTop="140dp"
            android:layout_marginRight="20dp"
            android:ems="10"
            android:inputType="numberDecimal"
            android:hint="0"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txt_euros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="140dp"
            android:text="€"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/txt_ingreso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginTop="30dp"
            android:text="AÑADIR INGRESO"
            android:textSize="34sp" />

        <EditText
            android:id="@+id/ent_notas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"

            android:layout_marginBottom="170dp"
            android:ems="10"
            android:hint="Nota..."
            android:inputType="text"
            android:textSize="24sp" />

        <Spinner
            android:id="@+id/categorias"
            android:layout_width="213dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:layout_marginBottom="60dp"
            android:layout_marginLeft="60dp"/>

        <DatePicker
            android:id="@+id/calendario"
            android:layout_width="316dp"
            android:layout_height="400dp"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:visibility="invisible"
            android:enabled="false"/>

        <ImageView
            android:id="@+id/im_Calendario"
            android:layout_width="71dp"
            android:layout_height="93dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginRight="100dp"
            app:srcCompat="@drawable/calendar" />

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>