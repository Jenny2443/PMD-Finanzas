<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditarGasto">

    <FrameLayout
        android:layout_width="421dp"
        android:layout_height="657dp"
        app:layout_constraintBottom_toTopOf="@+id/main_btn_nav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/EdGa_imSubida"
            android:layout_width="162dp"
            android:layout_height="164dp"
            android:layout_gravity="center"
            android:layout_marginTop="85dp" />

        <Button
            android:id="@+id/EdGa_btn_cargar_im"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:background="#74C7FF00"
            android:backgroundTint="#CDDC39"
            android:onClick="selectImageFromGallery"
            android:text="Cargar imagen"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/EdGa_fecha_seleccionada"
            android:layout_width="161dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="35dp"
            android:layout_marginBottom="100dp"
            android:text="Fecha"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/EdGa_txt_categoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="205dp"
            android:text="Categoría:"
            android:textSize="24sp" />

        <Button
            android:id="@+id/EdGa_btn_guardar"
            android:layout_width="152dp"
            android:layout_height="64dp"
            android:layout_gravity="bottom|center"
            android:layout_marginLeft="90dp"
            android:layout_marginBottom="30dp"
            android:backgroundTint="#39AF3D"
            android:text="Guardar"
            android:onClick="mostrarGuardado"
            android:textColorHighlight="#4CAF50"
            android:textSize="24sp"
            app:iconTint="@color/verde" />

        <Button
            android:id="@+id/EdGa_btn_cancelar"
            android:layout_width="152dp"
            android:layout_height="64dp"
            android:layout_gravity="bottom|center"
            android:layout_marginRight="90dp"
            android:layout_marginBottom="30dp"
            android:backgroundTint="#F44336"
            android:text="Cancelar"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/EdGa_ent_cantidad"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginTop="120dp"
            android:layout_marginRight="100dp"
            android:ems="10"
            android:hint="0"
            android:inputType="numberDecimal"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/EdGa_txt_euros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginTop="120dp"
            android:layout_marginRight="50dp"
            android:text="€"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/EdGa_txt_ingreso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginTop="30dp"
            android:text="EDITAR GASTO"
            android:textSize="34sp" />

        <EditText
            android:id="@+id/EdGa_ent_notas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"

            android:layout_marginBottom="110dp"
            android:ems="10"
            android:hint="Nota..."
            android:inputType="text"
            android:textSize="24sp" />

        <Spinner
            android:id="@+id/EdGa_categorias"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="80dp"
            android:layout_marginBottom="170dp" />

        <DatePicker
            android:id="@+id/EdGa_calendario"
            android:layout_width="316dp"
            android:layout_height="400dp"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:enabled="false"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/EdGa_im_Calendario"
            android:layout_width="71dp"
            android:layout_height="93dp"
            android:layout_gravity="center"
            android:layout_marginRight="100dp"
            android:layout_marginBottom="100dp"
            app:srcCompat="@drawable/calendar" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/guardado"
        android:layout_width="342dp"
        android:layout_height="498dp"
        android:background="#00FFFFFF"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/EdGa_fondo_guardado"
            android:layout_width="296dp"
            android:layout_height="430dp"
            android:layout_gravity="bottom|center"
            android:foreground="@drawable/fondo_guardado" />

        <TextView
            android:id="@+id/EdGa_txt_guardado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginTop="100dp"
            android:fontFamily="sans-serif"
            android:text="Gasto guardado correctamente"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="34sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/EdGa_im_ok"
            android:layout_width="243dp"
            android:layout_height="130dp"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="10dp"
            android:clickable="true"
            android:foreground="@drawable/btn_ok"
            android:onClick="openActivityHome" />

        <ImageView
            android:id="@+id/EdGa_im_cimagen"
            android:layout_width="243dp"
            android:layout_height="130dp"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="90dp"
            android:clickable="true"
            android:foreground="@drawable/btn_cimagen"
            android:onClick="openActivityHome" />

        <ImageView
            android:id="@+id/EdGa_im_ctexto"
            android:layout_width="243dp"
            android:layout_height="130dp"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="170dp"
            android:clickable="true"
            android:foreground="@drawable/btn_ctexto"
            android:onClick="openActivityHome" />
    </FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/main_btn_nav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:itemIconTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_navigation_menu" >

    </com.google.android.material.bottomnavigation.BottomNavigationView>

</androidx.constraintlayout.widget.ConstraintLayout>